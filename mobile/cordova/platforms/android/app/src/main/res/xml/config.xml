<?xml version='1.0' encoding='utf-8'?>
<widget id="com.medicd21.sortems.mobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sort EMS Mobile</name>
    <description>Hybrid wrapper for Sort_EMS web frontend with Zebra DataWedge integration</description>
    <author>MedicD21</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <config-file parent="/manifest" target="app/src/main/AndroidManifest.xml">
        <uses-permission android:name="android.permission.INTERNET" />
    </config-file>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:networkSecurityConfig="@xml/network_security_config" android:usesCleartextTraffic="true" />
    </edit-config>
    <resource-file src="res/xml/network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="ScrollEnabled" value="true" />
    <preference name="SplashScreen" value="false" />
</widget>
